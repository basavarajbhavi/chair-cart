pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/pranshulgupta/shopping-cart.git'
      }
    }
     
    stage('Dependencies') {
      steps {
        sh 'npm install'
      }
    }
    stage('start') {
      steps {
         sh 'npm start'
      }
    }
    
            
    stage('Build') {
      steps {
        sh 'npm run build'
      }
    }
     stage('publish') {
      steps {
        sh 'npm run deploy'
      }
    }
  }
}
